.container
  width: 100%
  height: 100vh
  display flex
  flex-direction: row
  align-items: center
  justify-content: space-evenly
  pointer-events: none
  transition: background-color 2s ease-out
  &:hover
    background: white

.insta
  display: block
  background: url('../img/insta_logo.png') no-repeat center
  background-size: cover
  width: 300px
  height: 300px
  pointer-events: auto
  transition: all 0.3s ease-in-out
  &:hover
    transform: scale(1.2, 1.2)

.vk
  composes: insta
  background: url('../img/vk_logo.png') no-repeat center
  background-size: cover
  &:hover
    transform: scale(1.2, 1.2)