.container
  display: flex
  justify-content: baseline
  align-items: center
  width: 100%
  height: 59px
  padding: 0 15px
  outline: none
  font-size: 12.5px
  line-height: 15px

.input_text
  padding-left: 10px
  text-align: left
  height: 26px
  border-radius: 2px
  border: 1px solid gray
  margin-right: 19px

.info_block
  display: flex
  align-items: center
  margin-left: auto

.info
  margin-left: 35px
  font-size: 11px
  text-align: center
  text-transform: capitalize

.error
  position: absolute
  top: 100px
  font-size: 15px
