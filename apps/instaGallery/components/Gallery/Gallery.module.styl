.overlay
  position: fixed
  z-index: 1
  opacity: 1
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: radial-gradient(ellipse at center, rgba(25,25,25,0.9) 0%,rgba(25,25,25,0.95) 100%)
  transition: opacity 0.5s ease-in-out

.container
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  img
    border-top-left-radius: 5px
    border-top-right-radius: 5px
    height: 525px
    cursor: pointer
    opacity: 1
    z-index: 2
    box-shadow: 0 0 40px rgba(25, 25, 25, 0.5)

.info
  background: white
  width: 100%
  padding: 10px
  box-sizing: border-box
  font-size: 13px
  margin-top: -4px
  border-bottom-left-radius: 5px
  border-bottom-right-radius: 5px

.like_block
  display: flex
  align-items: center
  margin-top: 10px

.like
  width: 14px
  height: 14px
  background: url(../../img/like.svg) no-repeat
  background-size: contain
  margin-right: 4px