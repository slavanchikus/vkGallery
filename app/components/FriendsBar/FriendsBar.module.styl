.container
  position: fixed
  width: 50px
  height: 899px
  left: 0
  top: 19px
  overflow-y: overlay
  overflow-x: hidden
  background: #fff
  border-radius: 2px
  box-shadow: 0 1px 0 0 #d7d8db, 0 0 0 1px #e3e4e8
  padding: 14px
  padding-left: 7px
  transition: all .3s linear
  &::-webkit-scrollbar-track
    background-color: #fff
  &::-webkit-scrollbar
    width: 7px
    background-color: #fff
  &::-webkit-scrollbar-thumb
    border-radius: 10px
    background-color: rgb(163, 162, 162, 0.53)
  img
    border-radius: 50%
    cursor: pointer

.friend_block
  display: flex
  flex-direction: row
  align-items: center
  flex-wrap: nowrap
  max-height: 50px
  margin-bottom: 5px

.input
  display: none
  width: 133px
  height: 20px
  position: absolute
  top: 17px
  margin-left: 20px
  padding-left: 5px

.name
  display: none
  min-width: 140px
  font-size: 13px
  margin-left: 10px

.search
  display: inline-block
  height: 24px
  width: 24px
  margin-left: 14px
  margin-bottom: 3px
  background: url('../../img/arrow.png') no-repeat
  background-size: contain
  cursor: pointer
  transition-duration: 0.8s

.expanded
  width: 200px
  transition: all .3s linear
  .name
    display: inline-block
  .input
    display: inline-block
  .search
    transform: rotate(180deg)

.empty
  font-size: 14px
  text-align: left
  margin-top: 15px
  padding-left: 10px
