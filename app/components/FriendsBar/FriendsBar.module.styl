.container
  position: fixed
  height: 901px
  left: 0
  top: 18px
  overflow: overlay
  background: #fff
  border-radius: 2px
  box-shadow: 0 1px 0 0 #d7d8db, 0 0 0 1px #e3e4e8
  padding: 14px
  padding-left: 7px
  animation: fadeIn 1s
  &::-webkit-scrollbar-track
    background-color: #fff
  &::-webkit-scrollbar
    width: 7px
    background-color: #fff
  &::-webkit-scrollbar-thumb
    border-radius: 10px
    background-color: rgb(163, 162, 162, 0.53)
  img
    border-radius: 50%
    cursor: pointer

@-webkit-keyframes fadeIn
  from
    opacity: 0
  to
    opacity: 1

@keyframes fadeIn
  from
    opacity: 0
  to
    opacity: 1
