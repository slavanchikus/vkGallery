.container
  position: relative

.picker
  height: 30px
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center
  color: white
  padding: 7px 16px 8px
  box-sizing: border-box
  background: #5e81a8
  border-radius: 2px
  cursor: pointer
  user-select: none

.options
  width: 100%
  position: absolute
  top: 29px
  display: flex
  flex-direction: column
  z-index: 1
  border: 1px solid #5e81a8
  box-sizing: border-box
  border-radius: 2px
  div
    position: relative
    height: 30px
    text-align: left
    padding-left: 15px
    line-height: 30px
    background: white
    border-bottom: 1px solid #5e81a8
    cursor: pointer
    user-select: none
  div:last-child
    border-bottom: 0
  .selected
    &::after
      content: "\2714"
      font-weight: 400
      color: #5e81a8
      display: block
      position: absolute
      right: 12px
      top: 0
      font-size: 16px