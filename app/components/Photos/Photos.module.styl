.container
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-between

.img
  width: 19%
  border-radius: 2%
  height: 162px
  margin-bottom: 19px
  background-size: cover
  cursor: pointer
  box-shadow: 0 1px 0 0 #d7d8db, 0 0 0 1px #e3e4e8

.panel
  display: flex
  flex-direction: row
  justify-content: center
  align-items: end
  font-size: 14px
  color: #2a5885
  background: white
  opacity: 0.9

.count
  display: inline-block
  margin-left: -2px

.like
  width: 14px
  height: 14px
  background: url(../../img/like.png) no-repeat
  background-size: contain
  background-position-y: 1px
  margin-right: 5px

.comment
  width: 14px
  height: 14px
  background: url(../../img/comment.png) no-repeat
  background-size: contain
  background-position-y: 1px
  margin-left: 12px
  margin-right: 5px