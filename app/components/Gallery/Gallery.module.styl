.overlay
  position: fixed
  opacity: 1
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: radial-gradient(ellipse at center, rgba(25,25,25,0.9) 0%,rgba(25,25,25,0.95) 100%)
  transition: opacity 0.5s ease-in-out

.container
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  img
    border-radius: 2%
    height: 525px
    cursor: pointer
    opacity: 1
    z-index: 2
    box-shadow: 0 0 40px rgba(25, 25, 25, 0.5)